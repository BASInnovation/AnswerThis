extends layout

block headcontent
  script(src="/javascripts/checkuser.js")
  script(src="/javascripts/product.js")

  script(type="text/javascript")
    | var Role = "#{user.userRole}"

block content
    div.container.productcontainer
        div.row
            div.col-md-6
                div.mainImageBorder
                    img#productImage(src="", alt="Presales Holding Page")
                div#mainImageLabel
                div.row.productrow
                    div.col-md-4.prodGalleryImageCol
                        div.border-grey
                            img.prodGalleryImage#subImage1(src="", alt="Presales Holding Page", onclick="ChangeImage('subImage1')")   
                        div.imagelabel.back-grey#subImage1Label Test Title
                    div.col-md-4.prodGalleryImageCol
                        div.border-orange
                            img.prodGalleryImage#subImage2(src="", alt="Presales Holding Page", onclick="ChangeImage('subImage2')")
                        div.imagelabel.back-orange#subImage2Label Test Title
                    div.col-md-4.prodGalleryImageCol
                        div.border-blue
                            img.prodGalleryImage#subImage3(src="", alt="Presales Holding Page", onclick="ChangeImage('subImage3')")
                        div.imagelabel.back-blue#subImage3Label Test Title
            div.col-md-6

                h1.productTitle#productName

                table.table.table-striped
                    tr
                        td 
                           span.pm PM: 
                           span#productPM
                        td 
                            span.tech Tech:  
                            span#productTech
                    tr
                        td
                            span.demo Demo: 
                            span#productDemo
                        td
                            span.ref References:  
                            span#productReferences

                h2.darkGrey#productStrapLine

                p#productDescription A system that extracts new value from previous and future investments Run trusted tools in the foreground or the background as needed, while the underlying data stays where it belongs. Users continue using the tools they like most, and enterprises continue to realise value from established systems

                div.row.productrow
                    div.col-md-12.videoTitle VIDEOS
                    div.col-md-4.videoCol
                        iframe.productVideo#productVideo1(title="YouTube video player", class="youtube-player", type="text/html", width="100%", height="200", src="", frameborder="0", allowFullScreen)
                    div.col-md-4.videoCol
                        iframe.productVideo#productVideo2(title="YouTube video player", class="youtube-player", type="text/html", width="100%", height="200", src="", frameborder="0", allowFullScreen)
                    div.col-md-4.videoCol
                        iframe.productVideo#productVideo3(title="YouTube video player", class="youtube-player", type="text/html", width="100%", height="200", src="", frameborder="0", allowFullScreen)

            input#productId(value=id, hidden)