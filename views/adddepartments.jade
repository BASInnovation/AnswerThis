extends layout

block headcontent
  script(src="/javascripts/checkuser.js")

  script(type="text/javascript")
    | var Role = "#{user.userRole}"

block content
    div.row
        div.col-md-2
        div.col-md-8
            h2 ADD Department
            div
                form.form-width(id='productForm', action='/adddepartments/adddepartment', method='post', enctype='multipart/form-data')
                    div.form-group
                        input.form-control#departmentName(type='text', name='departmentName', placeholder='Department Name',required, autofocus)
                    div.form-group
                        input.form-control#departmentManager(type='text', name='departmentManager', placeholder='Department Manager', required)
                    div.form-group
                        input.form-control#departmentDescription(type='text', name='departmentDescription', placeholder='Department Description', required)
                    button.btn(type='submit') &nbsp;Create Department
                    span.clearfix
            #message
            if message
                h2.errorMessage #{message}