extends layout

block content
	div.row
		div.col-md-4
		div.col-md-4.center
			h2 Sign in to our Passport app
				div
					img(src='images/user.png')
					form.loginform(action='/login', method='POST')
						div.form-group
							label(for='username') User Name
							input.form-control(type='text', name='username', placeholder='Username',required, autofocus)
						div.form-group
							label(for='passwrod') Password
							input.form-control(type='password', name='password', placeholder='Password', required)
						button.btn(type='submit') &nbsp;Sign in
				#message
				if message
					h2.errorMessage #{message}
		div.col-md-4
